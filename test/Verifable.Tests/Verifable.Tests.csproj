    <PackageReference Include="System.Security.Cryptography.ProtectedData" Version="5.0.0" />
    <PackageReference Include="xunit" Version="2.4.1" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.CodeCoverage" Version="16.10.0" />
    <PackageReference Include="coverlet.collector" Version="3.1.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="coverlet.msbuild" Version="3.1.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Xunit.SkippableFact" Version="1.4.13" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Verifable.BouncyCastle\Verifable.BouncyCastle.csproj" />
    <ProjectReference Include="..\..\src\Verifable.DataStorage\Verifable.DataStorage.csproj" />
    <ProjectReference Include="..\..\src\Verifable.Security.Windows\Verifable.Security.Windows.csproj" />
    <ProjectReference Include="..\..\src\Verifable.Tpm\Verifable.Tpm.csproj" />
    <ProjectReference Include="..\..\src\Verifable.Core\Verifable.Core.csproj" />
    <ProjectReference Include="..\..\src\Verifable.NSec\Verifable.NSec.csproj" />
    <ProjectReference Include="..\..\src\Verifable.SideTree\Verifable.Sidetree.csproj" />
    <ProjectReference Include="..\..\src\Verifable\Verifable.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="xunit.runner.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
