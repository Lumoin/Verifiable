<Project>

  <PropertyGroup>
    <LangVersion>10.0</LangVersion>
    <SourceRoot>$(MSBuildThisFileDirectory)</SourceRoot>

    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <NoWarn>$(NoWarn);1591;2003</NoWarn>
    <IncludeSymbols>true</IncludeSymbols>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludePackageReferencesDuringMarkupCompilation>true</IncludePackageReferencesDuringMarkupCompilation>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>

    <!-- Lock files and so https://github.com/dotnet/reproducible-builds do not work
         cross-platform yet. Explanations can be had at https://github.com/NuGet/Home/issues/9195.
         This may happen for .NET 7. Once lock-files become cross-platform and
         reproducible builds are possible, global.json should be introduced
         (at the expense of developer experience).
     -->
    <!-- <RestorePackagesWithLockFile>true</RestorePackagesWithLockFile> -->
  </PropertyGroup>

  <!-- Common nuget package parameters and resources. -->
  <PropertyGroup>
    <PackageId>$(AssemblyName)</PackageId>
    <Authors>Lumoin and contributors</Authors>
    <Product>Verifiable</Product>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Copyright>Lumoin</Copyright>
    <PackageIcon>resources/verifiable-nuget-logo.png</PackageIcon>
    <PackageProjectUrl>https://github.com/lumoin/Verifiable/</PackageProjectUrl>
    <Company>Lumoin</Company>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <RepositoryUrl>https://github.com/lumoin/Verifiable</RepositoryUrl>
    <RepositoryType>git</RepositoryType>

    <!-- These should be distributed to packages as appropriate when packages diverge. -->
    <PackageVersion>0.0.0.1-alpha</PackageVersion>
    <AssemblyVersion>0.0.0.1</AssemblyVersion>
    <FileVersion>0.0.0.1</FileVersion>
    <NeutralLanguage>en-US</NeutralLanguage>
    <Version>0.0.1</Version>

    <AppendToReleaseNotesProperty>
      <![CDATA[
See full changelog at https://github.com/lumoin/Verifiable/blob/main/CHANGELOG.md.]]>
    </AppendToReleaseNotesProperty>
    <ChangelogFile>../../CHANGELOG.md</ChangelogFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Update="Microsoft.SourceLink.GitHub" Version="1.1.1" />
    <PackageReference Include="SIL.ReleaseTasks" Version="2.5.0" PrivateAssets="all" />
  </ItemGroup>

